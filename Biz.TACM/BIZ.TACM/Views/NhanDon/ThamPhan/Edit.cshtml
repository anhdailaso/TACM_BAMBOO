@using Biz.Lib.TACM.Resources.Resources;
@model Biz.TACM.Models.ViewModel.NhanDon.ThamPhanViewModel

@using (Html.BeginForm("EditThamPhan", "NhanDon", FormMethod.Post, new { @id = "formEditThamPhan" }))
{
    @Html.AntiForgeryToken()
    <input type="hidden" name="HoSoVuAnID" value="@Model.HoSoVuAnID" />
    <div class="modal-header">
        <h5 class="modal-title">@ViewText.TITLE_PHANCONG_THAMPHAN</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="col-5">
                        <label>@ViewText.LABEL_THAMPHAN<span class="input-required">*</span></label>
                    </div>
                    <div class="col-7">
                        @Html.DropDownListFor(x => x.ThamPhan, (SelectList)ViewBag.listThamPhan, Setting.DDL_CHOOSE, new { @class = "form-control" })
                        <small class="form-text text-danger">
                            @Html.ValidationMessageFor(x => x.ThamPhan)
                        </small>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-5">
                        <label>@ViewText.LABEL_NGAYPHANCONG<span class="input-required">*</span></label>
                    </div>
                    <div class="col-7">
                        <div class="input-group date" id="ngay-phan-cong-dtp">
                            @Html.TextBoxFor(o => o.NgayPhanCong, new { @class = "form-control" })
                            <span class="input-group-addon">
                                <span class="fa fa-calendar"></span>
                            </span>
                        </div>
                        <small class="form-text text-danger">
                            @Html.ValidationMessageFor(x => x.NgayPhanCong)
                        </small>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-5">
                        <label>@ViewText.LABEL_NGUOIPHANCONG<span class="input-required">*</span></label>
                    </div>
                    <div class="col-7">
                        @Html.DropDownListFor(x => x.TenNguoiPhanCong, (SelectList)ViewBag.listNguoiPhanCong, Setting.DDL_CHOOSE, new { @class = "form-control" })
                        <small class="form-text text-danger">
                            @Html.ValidationMessageFor(x => x.TenNguoiPhanCong)
                        </small>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-5">
                        <label>@ViewText.LABEL_GHICHU</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        @Html.TextArea("GhiChu", Html.Raw(Model.GhiChu).ToString(), new { @class = "form-control", @maxlength = 2000, id = "ghi-chu-tham-phan-textarea" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default text-uppercase pull-left" data-dismiss="modal">@ViewText.BUTTON_HUY</button>
        <button type="button" class="btn btn-danger text-uppercase pull-right" id="luu-tham-phan-btn">@ViewText.BUTTON_LUU</button>
    </div>  
}

<script type="text/javascript">
    $(function () {
        EditThamPhanModule.init();
    });
</script>
