@using Biz.Lib.TACM.Resources.Resources
@model Biz.TACM.Models.ViewModel.NhanDon.ChuyenDonViewModel

@if (Model != null)
{
    <div class="row">
        <div class="col-12">            
            @Html.DropDownList("ddlNgayTao", (SelectList)ViewBag.listNgayTao, null, new { @id = "selectNgayTaoChuyenDon", @class = "custom-select mb-2" })
            <button id="btnSuaChuyenDon" class="btn btn-sm btn-outline-primary btn-custom-size float-right mt-2" data-trigger="modal" data-target="#modal" data-url="@Url.Action("EditChuyenDon", "NhanDon", new{ hoSoVuAnId = Model.HoSoVuAnID , chuyenDonId = Model.ChuyenDonID})"><i class="fa fa-pencil-square-o"></i></button>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between"><span>@ViewText.LABEL_SO</span><span class="font-weight-bold">@Model.ChuyenDonID</span></li>
                <li class="list-group-item d-flex justify-content-between"><span>@ViewText.LABEL_NGAYRATHONGBAO</span><span class="font-weight-bold">@string.Format("{0:dd/MM/yyyy}", @Model.NgayRaThongBao)</span></li>
                <li class="list-group-item d-flex justify-content-between"><span>@ViewText.LABEL_NGAYCHUYENDON</span><span class="font-weight-bold">@string.Format("{0:dd/MM/yyyy}", @Model.NgayChuyenDon)</span></li>
                <li class="list-group-item d-flex justify-content-between"><span>@ViewText.LABEL_TOAANCHUYENDEN</span><span class="font-weight-bold">@Model.ToaAnChuyenDen</span></li>
                <li class="list-group-item d-flex justify-content-between"><span>@ViewText.LABEL_NGUOITAO</span><span class="font-weight-bold">@Model.NguoiTao</span></li>
                <li class="list-group-item d-flex justify-content-between"><span>@ViewText.LABEL_NGAYTAO</span><span class="font-weight-bold">@Model.NgayTao</span></li>
            </ul>
        </div>
        <div class="col-6">
            <div class="card">
                <div class="card-block">
                    <p><strong>@ViewText.LABEL_LYDO_CHUYENDON</strong></p>
                    <div class="card">
                        <div class="card-block" style="height: 186px; overflow-y: scroll">
                            @Html.Raw(Model.LyDoChuyenDon)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{   
    <div class="container-fluid row">
        <div class="col-12">
            <div class="row">
                <div class="col-12">
                    <button id="btnThemChuyenDon" class="btn btn-sm btn-primary float-right mt-2 mb-2" data-trigger="modal" data-target="#modal" data-url="@Url.Action("EditChuyenDon", "NhanDon", new{ ViewBag.hoSoVuAnId , chuyenDonId = 0})"><i class="fa fa-plus btn-icon-size"></i></button>
                </div>
            </div>
            <div class="mb-1 text-center empty-data">
                <blockquote>
                    <strong>@NotifyMessage.CHUACO_DULIEU</strong>
                </blockquote>
            </div>
        </div>
    </div>
}