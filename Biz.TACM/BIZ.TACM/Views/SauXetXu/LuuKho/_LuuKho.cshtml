@using Biz.Lib.TACM.Resources.Resources
@model Biz.TACM.Models.ViewModel.SauXetXu.LuuKho.LuuKhoViewModel

@if (Model != null)
{
    <div class="row">
        <div class="col-12">
            @Html.DropDownList("ngay-luu-kho-dropdownlist", Model.DanhSachNgayLuuKho, new { @class = "custom-select mb-2" })
            <button id="btnSuaLuuKho" class="btn btn-sm btn-outline-primary btn-custom-size float-right mt-2" data-trigger="modal" data-target="#modal" data-url="@Url.Action("LuuKhoModal", "SauXetXu", new{ id = Model.ThongTinLuuKho.LuuKhoId})"><i class="fa fa-pencil-square-o"></i></button>
        </div>
    </div>
    <div class="row" id="thong-tin-luu-kho-container">
        @{ Html.RenderPartial("LuuKho/_ThongTinLuuKho", Model.ThongTinLuuKho); }
    </div>
}
else
{
    <div class="container-fluid row">
        <div class="col-12">
            <div class="row">
                <div class="col-12">
                    <button id="btnThemLuuKho" class="btn btn-sm btn-primary float-right mt-2 mb-2" data-trigger="modal" data-target="#modal" data-url="@Url.Action("LuuKhoModal", "SauXetXu", new { id = 0})"><i class="fa fa-plus btn-icon-size"></i></button>
                </div>
            </div>
            <div class="mb-1 text-center empty-data">
                <blockquote>
                    <strong>@NotifyMessage.CHUACO_DULIEU</strong>
                </blockquote>
            </div>
        </div>
    </div>
}