@using Biz.Lib.TACM.Resources.Resources
@model Biz.TACM.Models.ViewModel.SauXetXu.PhatHanhBanAn.PhatHanhBanAnViewModel

@if (Model != null)
{
    <div class="row">
        <div class="col-12">
            @Html.DropDownList("ngay-phat-hanh-ban-an-dropdownlist", Model.DanhSachNgayPhatHanhBanAn, new { @class = "custom-select mb-2" })
            <button id="btnSuaPhatHanhBanAn" class="btn btn-sm btn-outline-primary btn-custom-size float-right mt-2" data-trigger="modal" data-target="#modalLarge" data-url="@Url.Action("PhatHanhBanAnModal", "SauXetXu", new {phatHanhBanAnId = Model.ThongTinPhatHanhBanAn.PhatHanhBanAnId})"><i class="fa fa-pencil-square-o"></i></button>
        </div>
    </div>
    <div id="thong-tin-phat-hanh-ban-an-container">
        @{Html.RenderPartial("PhatHanhBanAn/_ThongTinPhatHanhBanAn", Model.ThongTinPhatHanhBanAn);}
    </div>
}
else
{
    <div class="container-fluid row">
        <div class="col-12">
            <div class="row">
                <div class="col-12">
                    @Html.Hidden("NgayTuyenAn", (String) ViewBag.NgayTuyenAn, new { id = "ngay-tuyen-an" })
                    <button id="btnThemPhatHanhBanAn" class="btn btn-sm btn-primary float-right mt-2 mb-2" data-trigger="modal" data-target="#modalLarge" data-url="@Url.Action("PhatHanhBanAnModal", "SauXetXu", new {phatHanhBanAnId = 0})"><i class="fa fa-plus btn-icon-size"></i></button>
                </div>
            </div>
            <div class="mb-1 text-center empty-data">
                <blockquote>
                    <strong>@NotifyMessage.CHUACO_DULIEU</strong>
                </blockquote>
            </div>
        </div>
    </div>
}
