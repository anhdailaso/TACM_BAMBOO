@using Biz.Lib.TACM.Resources.Resources
@model Biz.TACM.Models.ViewModel.SauXetXu.ChuyenHoSo.ChuyenHoSoViewModel

@if (Model != null)
{
    <div class="row">
        <div class="col-12">
            @Html.DropDownList("ddlNgayTao", (SelectList)ViewBag.listNgayTao, null, new { @id = "selectNgayTaoChuyenHoSo", @class = "custom-select mb-2" })
            <button id="btnSuaChuyenHoSo" class="btn btn-sm btn-outline-primary btn-custom-size float-right mb-2" data-trigger="modal" data-target="#modal" data-url="@Url.Action("EditChuyenHoSo", "SauXetXu", new{ hoSoVuAnId = Model.HoSoVuAnID , chuyenHoSoId = Model.ChuyenHoSoID})"><i class="fa fa-pencil-square-o"></i></button>
        </div>
    </div>
    <div class="row" id="contentChuyenHoSo">
        @{ Html.RenderPartial("ChuyenHoSo/_ChiTietChuyenHoSo", Model);}
    </div>
}
else
{
    <div class="container-fluid row">
        <div class="col-12">
            <button id="btnThemChuyenHoSo" class="btn btn-sm btn-primary float-right mt-2 mb-2" data-trigger="modal" data-target="#modal" data-url="@Url.Action("EditChuyenHoSo", "SauXetXu", new {ViewBag.hoSoVuAnId, chuyenHoSoId = 0})"><i class="fa fa-plus btn-icon-size"></i></button>
        </div>
    </div>
    <div class="container-fluid row">
        <div class="col-12">
            <div class="mb-1 text-center empty-data">
                <blockquote>
                    <strong>@NotifyMessage.CHUACO_DULIEU</strong>
                </blockquote>
            </div>
        </div>
    </div>
}