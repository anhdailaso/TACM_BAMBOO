@using Biz.Lib.TACM.Resources.Resources
@model Biz.TACM.Models.ViewModel.SauXetXu.ChuyenHoSo.ChuyenHoSoViewModel

@using (Html.BeginForm("EditChuyenHoSo", "SauXetXu", FormMethod.Post, new { @id = "formEditChuyenHoSo" }))
{
    @Html.AntiForgeryToken()
    <input type="hidden" name="HoSoVuAnID" value="@Model.HoSoVuAnID" />
    <div class="modal-header">
        <h5 class="modal-title">@ViewText.TITLE_CHUYENHOSO</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-12">
                <div class="row mb-3">
                    <div class="col-5">
                        <label>@ViewText.LABEL_NGAYRA_PHIEUCHUYEN<span class="input-required">*</span></label>
                    </div>
                    <div class="col-7">
                        <div class="input-group date" id="ngay-ra-thong-bao-dtp">
                            @Html.TextBoxFor(o => o.NgayRaThongBao, new { @class = "form-control" })
                            <span class="input-group-addon">
                                <span class="fa fa-calendar"></span>
                            </span>
                        </div>
                        <small class="form-text text-danger"><span for="NgayRaThongBao"></span></small>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-5">
                        <label>@ViewText.LABEL_NGAYCHUYENHOSO<span class="input-required">*</span></label>
                    </div>
                    <div class="col-7">
                        <div class="input-group date" id="ngay-chuyen-ho-so-dtp">
                            @Html.TextBoxFor(o => o.NgayChuyenHoSo, new { @class = "form-control" })
                            <span class="input-group-addon">
                                <span class="fa fa-calendar"></span>
                            </span>
                        </div>
                        <small class="form-text text-danger"><span for="NgayChuyenHoSo"></span></small>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-5">
                        <label>@ViewText.LABEL_TOAANCHUYENDEN<span class="input-required">*</span></label>
                    </div>
                    <div class="col-7">
                        <div style="margin-bottom: 15px">
                            @Html.DropDownList("ddlVungChuyenHoSo", (SelectList)ViewBag.listVungChuyenDon, null, new { @class = "form-control" })
                        </div>
                        <div>
                            <input id="hiddenToaAnChuyenDen" type="hidden" value="@Model.ToaAnChuyenDen" />
                            @Html.DropDownList("ToaAnChuyenDen", (SelectList)ViewBag.listToaAnHuyen, null, new { @class = "form-control", id = "ddlToaAnChuyenDen" })
                            @Html.TextBox("ToaAnChuyenDen", string.Empty, new { @class = "form-control", id = "txtToaAnChuyenDen" })
                            <small class="form-text text-danger"><span for="txtToaAnChuyenDen"></span></small>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-5">
                        <label>@ViewText.LABEL_LYDOCHUYEN_HOSO<span class="input-required">*</span></label>
                    </div>
                    <div class="col-7">
                        @Html.DropDownListFor(m => m.LyDoChuyenHoSo, (SelectList)ViewBag.listLyDoChuyen, Setting.DDL_CHOOSE, new { @class = "form-control" })
                        <small class="form-text text-danger"><span for="LyDoChuyenHoSo"></span></small>
                    </div>
                </div>

                <div class="row">
                    <div class="col-5">
                        <label>@ViewText.LABEL_GHICHU</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        @Html.TextArea("GhiChu", null, new { @class = "form-control", id="ghi-chu-chuyen-ho-so-sxx-textarea", style = "width: 100%", @maxlength = 2000 })
                    </div>
                </div>
                @Html.HiddenFor(x => x.CongDoanHoSo)
                @Html.HiddenFor(x => x.GiaiDoan)
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-default text-uppercase pull-left" data-dismiss="modal">@ViewText.BUTTON_HUY</button>
        <button type="button" class="btn btn-danger text-uppercase pull-right" id="btnLuuChuyenHoSo">@ViewText.BUTTON_LUU</button>
    </div>    
}
<script type="text/javascript">
    $(function () {
        EditChuyenHoSoModule.init();
    });
</script>