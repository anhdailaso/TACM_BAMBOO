@model Biz.TACM.Models.ViewModel.QuanLyNhanVien.ImportNhanVienViewModel
@using Biz.Lib.TACM.Resources.Resources
@using (Html.BeginForm("ImportNhanVien", "QuanLyNhanVien", FormMethod.Post, new
{
    id = "import-form",
    enctype = "multipart/form-data"
}))
{
    @*@Html.AntiForgeryToken()*@
    <div class="modal-header">
        <h5 class="text-uppercase">@ViewText.TITLE_THEMDANHSACH_EXEL</h5>
        <button type="button" class="close" data-dismiss="modal"><i class="fa fa-times"></i></button>
    </div>
    <div class="modal-body" id="import-nv">
        <div class="row">
            <div class="col-md-3">
                <span class="float-right" style="padding-top:10px"><label>@ViewText.LABEL_CHON_FILE</label><span class="input-required float-right">*</span></span>
            </div>
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.File, new { @class = "form-control", id = "excel", @type = "file", @style = "height:35%;width:90%", @accept = ".xlsx,.xls" })

                <div style="font-size:10pt">
                    <span>
                        <span>@ViewText.LABEL_TAI_FILEEXEL_MAU </span>
                        <a target="_blank" href="~/Uploads/Templates/Them_NV_Tu_File.xlsx">@ViewText.LABEL_TAIDAY</a>.
                    </span><br />
                    <span>Chấp nhận file: XLS, XLSX</span><br />
                    <span>@string.Format(NotifyMessage.DUNGLUONG_TOIDA, "2")</span><br />
                    @Html.ValidationMessageFor(m => m.File)
                </div>
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <div style="text-align:right;width:100%">
            <button class="btn btn-default text-uppercase pull-left" data-dismiss="modal" aria-hidden="true">Hủy</button>
            <button type="button" class="btn btn-danger text-uppercase pull-right" aria-hidden="true" id="bnt-import">Lưu</button>
        </div>
    </div>
}
<script type="text/javascript">
    $(function () {
        ImportNhanVienModule.init();
    });
</script>

