@model Biz.TACM.Models.ViewModel.SoDoToChuc.ChucDanhViewModel
@using Biz.Lib.TACM.Resources.Resources
<div class="modal-header">
    <h5 class="modal-title text-uppercase">@ViewText.TITLE_CHITIET</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-block">
                    <table class="table table-information">
                        <tbody>
                            <tr>
                                <td>@ViewText.LABEL_TENCHUCVU</td>
                                <td class="text-value-bold">@Model.ChucDanh</td>
                            </tr>
                            <tr>
                                <td>@ViewText.LABEL_CHUCVUCHA</td>
                                <td class="text-value-bold">@(Model.ChucDanhCha != null ? Model.ChucDanhCha : "Không có")</td>
                            </tr>
                        </tbody>
                    </table>
                    <p class="pl-2-5">@ViewText.LABEL_DIENDAINGHIEPVU</p>
                    <div class="card">
                        <div class="card-block" style="height: 200px; overflow: scroll">
                            @Html.Raw(Model.DienGiaiNghiepVu)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>