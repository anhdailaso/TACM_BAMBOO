@using Biz.Lib.TACM.Resources.Resources
@model Biz.TACM.Models.ViewModel.ThuLy.ThongTinThuLyViewModel


@if (Model != null)
{
    <div class="row">
        <div class="col-12">
            @Html.DropDownList("ddlNgayTao", (SelectList)ViewBag.listNgayTao, null, new { @id = "selectNgayTaoThongTinThuLy", @class = "custom-select mb-2" })
            <button id="btnSuaThongTinThuLy" class="btn btn-sm btn-outline-primary btn-custom-size float-right mt-2" data-trigger="modal" data-target="#modal" data-url="@Url.Action("EditThongTinThuLyADBPXLHC", "ThuLy", new{ hoSoVuAnId = Model.HoSoVuAnID , thongTinThuLyId = Model.ThongTinThuLyID})"><i class="fa fa-pencil-square-o"></i></button>
        </div>
    </div>
    <div id="bodyThongTinThuLy">
        <div class="row">
            <div class="col-12">
                <ul class="list-group">
                    <li class="list-group-item d-flex justify-content-between"><span>@ViewText.LABEL_SOTHULY</span><span class="font-weight-bold">@Model.SoThuLy</span></li>
                    <li class="list-group-item d-flex justify-content-between"><span>@ViewText.LABEL_NGAYTHULY</span><span class="font-weight-bold">@Model.NgayThuLy</span></li>
                    <li class="list-group-item d-flex justify-content-between"><span>@ViewText.LABEL_QUYETDINH_BIKHIEUNAI_KN_KC</span><span class="font-weight-bold">@Model.QuyetDinh</span></li>
                    <li class="list-group-item d-flex justify-content-between"><span>@ViewText.LABEL_NGUOITAO</span><span class="font-weight-bold">@Model.NguoiTao</span></li>
                    <li class="list-group-item d-flex justify-content-between"><span>@ViewText.LABEL_NGAYTAO</span><span class="font-weight-bold">@Model.NgayTao</span></li>
                </ul>
            </div>           
        </div>
    </div>
}
else
{
    <div class="container-fluid row">
        <div class="col-12">
            <div class="row">
                <div class="col-12">
                    <button id="btnThemThongTinThuLy" class="btn btn-sm btn-primary float-right mt-2 mb-2" data-trigger="modal" data-target="#modal" data-url="@Url.Action("EditThongTinThuLyADBPXLHC", "ThuLy", new {ViewBag.hoSoVuAnId, thongTinThuLyId = 0})"><i class="fa fa-plus btn-icon-size"></i></button>
                </div>
            </div>
            <div class="mb-1 text-center empty-data">
                <blockquote>
                    <strong>@NotifyMessage.CHUACO_DULIEU</strong>
                </blockquote>
            </div>
        </div>
    </div>
}

