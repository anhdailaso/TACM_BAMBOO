@model Biz.TACM.Models.ViewModel.MauIn.MauInBiaHoSoViewModel

<table border="0" cellspacing="0" style="font-size: 14pt; font-family: 'Times New Roman'; margin: 56.7pt 42.525pt 0 85.05pt;">
    <tr valign="top">
        <td align="left" width="35%">
            <table cellspacing="0">
                <tr>
                    <td align="left" colspan="3" style="font-size: 12pt;">
                        <p style="text-align: center; margin: 0 0 10px 0;"><strong>TÒA ÁN NHÂN DÂN</strong></p>
                        @if (Model.TenToaAn.IndexOf("huyện") != -1 || Model.TenToaAn.IndexOf("thành phố") != -1)
                        {
                            <p style="text-align: center; margin: 0 0 0 0;"><strong>@Model.TenToaAn.ToUpper()</strong></p>
                        }
                        <p style="text-align: center; margin:10px 0 0 0;"><strong>TỈNH CÀ MAU</strong></p>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td width="70px" height="3px" style="border-bottom-style: solid; border-bottom-width: 1px; border-bottom-color: black"></td>
                    <td></td>
                </tr>
            </table>
        </td>
        <td width="5%"></td>
        <td align="right" width="55%">
            <table cellspacing="0">
                <tr style="text-transform: uppercase;">
                    <td colspan="3" style="text-align: center;">
                        <p style="margin: 0 0 10px 0;font-size: 12pt"><strong>CỘNG HÒA XÃ HỘI CHỦ NGHĨA VIỆT NAM</strong></p>
                        <p style="margin: 0 0 0 0;font-size:14pt"><strong>Độc lập - Tự do - Hạnh phúc</strong></p>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td width="60%" height="3px" style="border-bottom-style: solid; border-bottom-width: 1px; border-bottom-color: black"></td>
                    <td></td>
                </tr>
            </table>
        </td>
    </tr>
    <tr style="height: 35px;"><td></td></tr>
    <tr>
        <td align="center" colspan="3" style="font-size:20pt">
            
                <p style="margin: 0 0 15px 0"><strong>HỒ SƠ HÀNH CHÍNH SƠ THẨM</strong></p>
           
        </td>
    </tr>
    <tr style="height: 20px;"><td></td></tr>
    <tr @*style="font-size:12pt"*@>
        <td colspan="3">
            <div>
                <p style="margin: 0 0 10px 0; text-align: justify; text-indent: 28.35pt; line-height: 1.15em;">
                    <strong>THỤ LÝ SỐ:</strong> @Model.SoThuLy HC-ST ngày @(Model.NgayThuLy.Day < 10 ? "0" + Model.NgayThuLy.Day.ToString() : Model.NgayThuLy.Day.ToString()) tháng @(Model.NgayThuLy.Month < 3 ? "0" + Model.NgayThuLy.Month.ToString() : Model.NgayThuLy.Month.ToString()) năm @Model.NgayThuLy.Year.ToString().
                </p>
                <p style="margin: 0 0 10px 0; text-align: justify; text-indent: 28.35pt; line-height: 1.15em;">
                    <strong>KHIẾU KIỆN:</strong> @Model.QuanHePhapLuat
                </p>
                
            </div>
        </td>
    </tr>
    <tr>
        <td colspan="3">
            <table border="1" cellspacing="0" style="font-size: 14pt; font-family: 'Times New Roman'; margin: 0 42.525pt 20px 85.05pt;">
                <tr>
                    
                        <td colspan="2" width="50%" style="text-align: center; padding: 10px 0 10px 0;"><strong>NGƯỜI KHỞI KIỆN (ĐẠI DIỆN)</strong></td>
                        <td width="50%" style="text-align: center; padding: 10px 0 10px 0;"><strong>NGƯỜI BỊ KIỆN (ĐẠI DIỆN)</strong></td>
                    
                </tr>
                <tr>
                    <td colspan="2" valign="top" style="padding: 10px 0 10px 0;">
                        <ol>
                            @if (Model.DanhSachNguyenDon.Any())
                            {
                                foreach (var item in Model.DanhSachNguyenDon)
                                {
                                    <li>
                                        @if (item.DuongSuLa == "Cá nhân")
                                        {
                                            <p>
                                                Họ và tên: @*@(item.GioiTinh == "Nam" ? "Ông " : "Bà ")*@@item.HoTenDuongSu
                                            </p>
                                            <br />
                                            <p>
                                                @(item.NgayThangNamSinh!=null && item.NgayThangNamSinh.Count()>4 ? "Sinh ngày: " : "Sinh năm: ")@(item.NgayThangNamSinh ?? "...............")
                                            </p>
                                            <br />
                                        }
                                        else if (item.DuongSuLa == "Cơ quan, tổ chức")
                                        {
                                            <p>
                                                @item.TenCoQuanToChuc
                                            </p>
                                            <br />
                                        }
                                        <p style="text-align: justify;">
                                            Địa chỉ: @if (item.NoiTamTru != null && !item.NoiTamTru.IsEmpty())
                                            {
                                                @item.NoiTamTru
                                            }
                                            else
                                            {
                                                @item.NoiDKHKTT
                                            }
                                        </p>
                                    </li>
                                }
                            }
                            else
                            {
                                <li>
                                    <p style="text-align: justify;">
                                        Họ và tên: ....................................
                                    </p>
                                    <p style="text-align: justify;">
                                        Năm sinh: ....................................
                                    </p>
                                    <p style="text-align: justify;">
                                        Địa chỉ: ......................................................
                                    </p>
                                </li>
                            }
                        </ol>
                    </td>
                    <td valign="top" style="padding: 10px 0 10px 0;">
                        <ol>
                            @if (Model.DanhSachBiDon.Any())
                            {
                                foreach (var item in Model.DanhSachBiDon)
                                {
                                    <li>
                                        @if (item.DuongSuLa == "Cá nhân")
                                        {
                                            <p>
                                                Họ và tên: @*@(item.GioiTinh == "Nam" ? "Ông " : "Bà ")*@@item.HoTenDuongSu
                                            </p>
                                            <br />
                                            <p>
                                                @(item.NgayThangNamSinh!=null && item.NgayThangNamSinh.Count()>4 ? "Sinh ngày: " : "Sinh năm: ")@(item.NgayThangNamSinh ?? "...............")
                                            </p>
                                            <br />
                                        }
                                        else if (item.DuongSuLa == "Cơ quan, tổ chức")
                                        {
                                            <p>
                                                @item.TenCoQuanToChuc
                                            </p>
                                            <br />
                                        }
                                        <p style="text-align: justify;">
                                            Địa chỉ: @if (item.NoiTamTru != null && !item.NoiTamTru.IsEmpty())
                                            {
                                                @item.NoiTamTru
                                            }
                                            else
                                            {
                                                @item.NoiDKHKTT
                                            }
                                        </p>
                                    </li>
                                }
                            }
                            else
                            {
                                <li>
                                    <p style="text-align: justify;">
                                        Họ và tên: ....................................
                                    </p>
                                    <p style="text-align: justify;">
                                        Năm sinh: ....................................
                                    </p>
                                    <p style="text-align: justify;">
                                        Địa chỉ: ......................................................
                                    </p>
                                </li>
                            }
                        </ol>
                    </td>
                </tr>
                <tr>
                        <td colspan="3" style="padding: 10px 0 10px 0;">
                            <p style="text-align: center; margin: 0 0 10px 0;"><strong>NGƯỜI CÓ QUYỀN LỢI, NGHĨA VỤ LIÊN QUAN</strong></p>
                            <ol>
                                @if (Model.DanhSachNguoiLienQuanTranhChap.Any())
                                {
                                    foreach (var item in Model.DanhSachNguoiLienQuanTranhChap)
                                    {
                                        <li>
                                            @if (item.DuongSuLa == "Cá nhân")
                                            {
                                                <p>
                                                    Họ và tên: @*@(item.GioiTinh == "Nam" ? "Ông " : "Bà ")*@@item.HoTenDuongSu
                                                </p>
                                                <br />
                                                <p>
                                                    @(item.NgayThangNamSinh!=null && item.NgayThangNamSinh.Count()>4 ? "Sinh ngày: " : "Sinh năm: ")@(item.NgayThangNamSinh ?? "...............")
                                                </p>
                                                <br />
                                            }
                                            else if (item.DuongSuLa == "Cơ quan, tổ chức")
                                            {
                                                <p>
                                                    Tên cơ quan, tổ chức: @item.TenCoQuanToChuc
                                                </p>
                                                <br />
                                            }
                                            <p style="text-align: justify;">
                                                Địa chỉ: @if (item.NoiTamTru != null && !item.NoiTamTru.IsEmpty())
                                                {
                                                    @item.NoiTamTru
                                                }
                                                else
                                                {
                                                    @item.NoiDKHKTT
                                                }
                                            </p>
                                        </li>
                                    }
                                }
                                else
                                {
                                    <li>
                                        <p style="text-align: justify;">
                                            Họ và tên: ....................................
                                        </p>
                                        <p style="text-align: justify;">
                                            Năm sinh: ....................................
                                        </p>
                                        <p style="text-align: justify;">
                                            Địa chỉ: ......................................................
                                        </p>
                                    </li>
                                }
                            </ol>
                        </td>
                    </tr>
            </table>
        </td>
    </tr>
    <tr style="padding-top:30px">
        <td colspan="3">
            <p style="margin: 0 0 10px 0; text-align: justify; text-indent: 28.35pt; line-height: 1.15em;">
                <strong>HỘI ĐỒNG XÉT XỬ</strong>
            </p>
            <p style="margin: 0 0 10px 0; text-align: justify; text-indent: 28.35pt; line-height: 1.15em;">
                Thẩm phán: @if (Model.ThamPhanChuToa != null && !Model.ThamPhanChuToa.IsEmpty())
                                {
                                    <span>@*@(Model.ThamPhanChuToa == "Nam" ? "Ông" : "Bà")*@ @Model.ThamPhanChuToa</span>
                                }
                                else
                                {
                                    <span>@*Ông (Bà)*@ .................................... </span>
                                }
            </p>
            <p style="margin: 0 0 10px 0; text-align: justify; text-indent: 28.35pt; line-height: 1.15em;">
                Hội thẩm nhân dân: @Model.HoiThamNhanDan1, @Model.HoiThamNhanDan2 @(Model.HoiDong == 2 ? ", " + Model.HoiThamNhanDan3 : "")
            </p>
            <p style="margin: 0 0 10px 0; text-align: justify; text-indent: 28.35pt; line-height: 1.15em;">
                Thư ký: @if (Model.ThuKy != null && !Model.ThuKy.IsEmpty())
                            {
                                <span>@*@(Model.GioiTinhThuKy == "Nam" ? "Ông" : "Bà")*@ @Model.ThuKy</span>
                            }
                            else
                            {
                                <span>@*Ông (Bà)*@ .................................... </span>
                            }
            </p>
            <p style="margin: 0 0 10px 0; text-align: justify; text-indent: 28.35pt; line-height: 1.15em;">
                Kiểm sát viên: @if (Model.KiemSatVien != null && !Model.KiemSatVien.IsEmpty())
                            {
                                <span>@*@(Model.GioiTinhKiemSatVien == "Nam" ? "Ông" : "Bà")*@ @Model.KiemSatVien</span>
                            }
                            else
                            {
                                <span>@*Ông (Bà)*@ .................................... </span>
                            }
            </p>
            <p style="margin: 0 0 10px 0; text-align: justify; text-indent: 28.35pt; line-height: 1.15em;">
                @if(Model.SoBanAn!=null)
                    {
                    <span>Bản án sơ thẩm số: @Model.SoBanAn/@Model.NgayRaBanAn.Year/HC-ST ngày @(Model.NgayRaBanAn.Day < 10 ? "0" + Model.NgayRaBanAn.Day.ToString() : Model.NgayRaBanAn.Day.ToString()) tháng @(Model.NgayRaBanAn.Month < 3 ? "0" + Model.NgayRaBanAn.Month.ToString() : Model.NgayRaBanAn.Month.ToString()) năm @Model.NgayRaBanAn.Year.ToString().</span>
                    }
                    else
                    {
                    <span>Quyết định sơ thẩm số: @Model.SoQuyetDinh/@Model.NgayRaQuyetDinh.Year/HC-ST ngày @(Model.NgayRaQuyetDinh.Day < 10 ? "0" + Model.NgayRaQuyetDinh.Day.ToString() : Model.NgayRaQuyetDinh.Day.ToString()) tháng @(Model.NgayRaQuyetDinh.Month < 3 ? "0" + Model.NgayRaQuyetDinh.Month.ToString() : Model.NgayRaQuyetDinh.Month.ToString()) năm @(Model.NgayRaQuyetDinh.Year==1 ? DateTime.Now.Year :Model.NgayRaQuyetDinh.Year).</span>
                    }
            </p>
             @if (Model.DanhSachNguoiKhangCao.Any())
             {
                    <p style="margin: 0 0 10px 0; text-align: justify; text-indent: 28.35pt; line-height: 1.15em;">
                        <span>Kháng cáo: </span>
                        @foreach (var item in Model.DanhSachNguoiKhangCao)
                        {

                            if (item != Model.DanhSachNguoiKhangCao.Last() && Model.DanhSachNguoiKhangCao.Count() > 1)
                            {
                                <span>Ngày @(item.NgayNop.Day < 10 ? "0" + item.NgayNop.Day.ToString() : item.NgayNop.Day.ToString()) tháng @(item.NgayNop.Month < 3 ? "0" + item.NgayNop.Month.ToString() : item.NgayNop.Month.ToString()) năm @item.NgayNop.Year.ToString(),</span>
                            }
                            else
                            {
                                <span>Ngày @(item.NgayNop.Day < 10 ? "0" + item.NgayNop.Day.ToString() : item.NgayNop.Day.ToString()) tháng @(item.NgayNop.Month < 3 ? "0" + item.NgayNop.Month.ToString() : item.NgayNop.Month.ToString()) năm @item.NgayNop.Year.ToString().</span>
                            }
                        }
                    </p>
             }
            @if(Model.VienKiemSatKhangNghi!=null)
                {
                    <p style="margin: 0 0 10px 0; text-align: justify; text-indent: 28.35pt; line-height: 1.15em;">
                        <span>Kháng nghị: Ngày @(Model.NgayKhangNghi.Day < 10 ? "0" + Model.NgayKhangNghi.Day.ToString() : Model.NgayKhangNghi.Day.ToString()) tháng @(Model.NgayKhangNghi.Month < 3 ? "0" + Model.NgayKhangNghi.Month.ToString() : Model.NgayKhangNghi.Month.ToString()) năm @Model.NgayKhangNghi.Year.ToString().</span>
                    </p>
                }
            <p style="margin: 0 0 10px 0; text-align: justify; text-indent: 28.35pt; line-height: 1.15em;">
                Không có KC/KN, án có hiệu lực từ ngày.......tháng.......năm............
            </p>
        </td>
    </tr>
</table>
