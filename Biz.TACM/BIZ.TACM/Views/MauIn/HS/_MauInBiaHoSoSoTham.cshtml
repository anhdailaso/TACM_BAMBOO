@model Biz.TACM.Models.ViewModel.MauIn.MauInBiaHoSoViewModel

<table border="0" cellspacing="0" style="font-size: 14pt; font-family: 'Times New Roman'; margin: 56.7pt 42.525pt 0 85.05pt;">
    <tr valign="top">
        <td align="left" width="35%">
            <table cellspacing="0">
                <tr>
                    <td align="left" colspan="3" style="font-size: 12pt;">
                        <p style="text-align: center; margin: 0 0 10px 0;"><strong>TÒA ÁN NHÂN DÂN</strong></p>
                        @if (Model.TenToaAn.IndexOf("huyện") != -1 || Model.TenToaAn.IndexOf("thành phố") != -1)
                        {
                            <p style="text-align: center; margin: 0 0 0 0;"><strong>@Model.TenToaAn.ToUpper()</strong></p>
                        }
                        <p style="text-align: center; margin:10px 0 0 0;"><strong>TỈNH CÀ MAU</strong></p>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td width="70px" height="3px" style="border-bottom-style: solid; border-bottom-width: 1px; border-bottom-color: black"></td>
                    <td></td>
                </tr>
            </table>
        </td>
        <td width="5%"></td>
        <td align="right" width="55%">
            <table cellspacing="0">
                <tr style="text-transform: uppercase;">
                    <td colspan="3" style="text-align: center;">
                        <p style="margin: 0 0 10px 0;font-size: 12pt"><strong>CỘNG HÒA XÃ HỘI CHỦ NGHĨA VIỆT NAM</strong></p>
                        <p style="margin: 0 0 0 0;font-size:14pt"><strong>Độc lập - Tự do - Hạnh phúc</strong></p>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td width="60%" height="3px" style="border-bottom-style: solid; border-bottom-width: 1px; border-bottom-color: black"></td>
                    <td></td>
                </tr>
            </table>
        </td>
    </tr>
    <tr style="height: 35px;"><td></td></tr>
    <tr>
        <td align="center" colspan="3" style="font-size:20pt">
            
                <p style="margin: 0 0 15px 0"><strong>HỒ SƠ HÌNH SỰ SƠ THẨM</strong></p>
           
        </td>
    </tr>
    <tr style="height: 20px;"><td></td></tr>
    <tr @*style="font-size:12pt"*@>
        <td colspan="3">
            <div>
                <p style="margin: 0 0 10px 0; text-align: justify; text-indent: 28.35pt; line-height: 1.15em;">
                    Số bị cáo: @Model.SoBiCan.
                </p>
                <p style="margin: 0 0 10px 0; text-align: justify; text-indent: 28.35pt; line-height: 1.15em;">
                    Thụ lý số: @(Model.SoThuLy ?? "........")/@(Model.NgayThuLy.Year==1 ? DateTime.Now.Year : Model.NgayThuLy.Year)/TLST-HS Ngày @(Model.NgayThuLy.Day < 10 ? "0" + Model.NgayThuLy.Day.ToString() : Model.NgayThuLy.Day.ToString()) tháng @(Model.NgayThuLy.Month < 3 ? "0" + Model.NgayThuLy.Month.ToString() : Model.NgayThuLy.Month.ToString()) năm @Model.NgayThuLy.Year.ToString().
                </p>
                <p style="margin: 0 0 10px 0; text-align: justify; text-indent: 28.35pt; line-height: 1.15em;">
                    Cáo trạng số: @Model.SoCaoTrang/@Model.NgayCaoTrang.Year.ToString() Ngày @(Model.NgayCaoTrang.Day < 10 ? "0" + Model.NgayCaoTrang.Day.ToString() : Model.NgayCaoTrang.Day.ToString()) tháng @(Model.NgayCaoTrang.Month < 3 ? "0" + Model.NgayCaoTrang.Month.ToString() : Model.NgayCaoTrang.Month.ToString()) năm @Model.NgayCaoTrang.Year.ToString().
                    
                </p>
            </div>
        </td>
    </tr>
    <tr>
        <td colspan="3">
            <table border="1" cellspacing="0" style="font-size: 14pt; font-family: 'Times New Roman'; margin: 0 42.525pt 20px 85.05pt;">
                <tr>

                    <td style="text-align: center; padding: 10px 0 10px 0;">Bị cáo</td>
                    <td style="text-align: center; padding: 10px 0 10px 0;">Cáo trạng truy tố</td>
                    <td style="text-align: center; padding: 10px 0 10px 0;">Nội dung BA, QĐ của Tòa án cấp sơ thẩm</td>

                </tr>
                
                @foreach(var item in Model.DanhSachBiCao)
                {
                    <tr>
                        <td style="padding: 10px 0 10px 10px;">
                            @if(item.DuongSuLa=="Cá nhân")
                            {
                                <p>
                                    Họ và tên: @item.HoTenDuongSu
                                </p>
                                
                                <p>
                                    @(item.NgayThangNamSinh!=null && item.NgayThangNamSinh.Count()>4 ? "Sinh ngày: " : "Sinh năm: ")@(item.NgayThangNamSinh ?? "...............")
                                </p>
                                
                            <p>
                                Địa chỉ: @if (item.NoiTamTru != null && !item.NoiTamTru.IsEmpty())
                                            {
                                                @item.NoiTamTru
                                            }
                                            else
                                            {
                                                @item.NoiDKHKTT
                                            }
                            </p>
                            
                            <p>
                                Tình trạng giam giữ: @item.TinhTrangGiamGiu
                            </p>
                            }
                            else
                            {
                                <p>
                                    Người đại diện: @item.HoTenDuongSu
                                </p>
                                
                            <p>
                                Địa chỉ: @if (item.NoiTamTru != null && !item.NoiTamTru.IsEmpty())
                                            {
                                                @item.NoiTamTru
                                            }
                                            else
                                            {
                                                @item.NoiDKHKTT
                                            }
                            </p>
                            }
                        </td>
                        <td style="padding: 10px 0 10px 10px;">
                            @if (item.DuongSuLa == "Cá nhân")
                            {
                            <p>
                                Tội danh: @item.ToiDanhTruyTo
                            </p>
                            <p>
                                Điều luật: @item.DieuLuatTruyTo
                            </p>
                            }
                        </td>
                        @if(item==Model.DanhSachBiCao.First())
                        {
                             <td style="padding: 10px 0 10px 10px;" rowspan="@Model.DanhSachBiCao.Count()">
                            
                                @if (Model.SoBanAn != null)
                                {
                                    if(Model.NoiDungBanAn!=null)
                                    {
                                        @Html.Raw("<p style=\"margin: 0px 0 10px 0;padding-left:28.5pt; text-align: justify; text-indent: 28.35pt; line-height: 1.15em;\"><ul style=\"padding-left:14pt;margin: 0px 0 5px 0;list-style-type: none;\">")
                                        @Html.Raw(Server.HtmlDecode(Model.NoiDungBanAn))
                                        @Html.Raw("</ul></p>")
                                    }
                                    else
                                    {
                                    <span>........................................</span>
                                    }
                                }
                                else
                                {
                                    if(Model.NoiDungQuyetDinh!=null)
                                    {
                                        @Html.Raw("<p style=\"margin: 0px 0 10px 0;padding-left:28.5pt; text-align: justify; text-indent: 28.35pt; line-height: 1.15em;\"><ul style=\"padding-left:14pt;margin: 0px 0 5px 0;list-style-type: none;\">")
                                        @Html.Raw(Server.HtmlDecode(Model.NoiDungQuyetDinh))
                                        @Html.Raw("</ul></p>")
                                    }
                                    else
                                    {
                                        <span>........................................</span>
                                    }
                                }
                            
                            </td>
                        }
                       
                    </tr>
                }
    </table><br />
    <table border="1" cellspacing="0" style="font-size: 14pt; font-family: 'Times New Roman'; margin: 0 42.525pt 20px 85.05pt;">
                    <tr>
                        <td rowspan="3" style="text-align: center;" width="80px">
                            Hội<br />
                            đồng<br />
                            xét xử
                        </td>
                        <td  style="padding: 10px 0 10px 10px;">
                            
                                Thẩm phán chủ tọa:
                                
                        </td>
                        <td  style="padding: 10px 0 10px 10px;">
                            
                                @if (Model.ThamPhanChuToa != null && !Model.ThamPhanChuToa.IsEmpty())
                                {
                                    <span>@*@(Model.ThamPhanChuToa == "Nam" ? "Ông" : "Bà")*@ @Model.ThamPhanChuToa</span>
                                }
                                else
                                {
                                    <span>@*Ông (Bà)*@ .................................... </span>
                                }
                           
                        </td>
                    </tr>
                    <tr>
                        <td style="padding: 10px 0 10px 10px;">
                            <p style="text-align: justify; margin: 0;">
                                Thẩm phán:
                            </p>
                        </td>
                        <td  style="padding: 10px 0 10px 10px;">
                            <p style="text-align: justify; margin: 0;">
                                @if (Model.HoiDong == 2)
                                {@Model.ThamPhanKhac}
                            </p>
                                
                        </td>
                    </tr>
                    <tr>
                        <td  style="padding: 10px 0 10px 10px;">
                            
                            <p style="text-align: justify; margin: 0;">
                                Hội thẩm nhân dân:
                              
                            </p>
                        </td>
                        <td  style="padding: 10px 0 10px 10px;">
                            <p style="text-align: justify; margin: 0;">
                                @if (Model.HoiThamNhanDan1 != null && !Model.HoiThamNhanDan1.IsEmpty())
                                {
                                    <span>@*@(Model.HoiThamNhanDan1 == "Nam" ? "Ông" : "Bà")*@ @Model.HoiThamNhanDan1</span>
                                }
                                @if (Model.HoiThamNhanDan2 != null && !Model.HoiThamNhanDan2.IsEmpty())
                                {
                                    <span>@*@(Model.HoiThamNhanDan2 == "Nam" ? "Ông" : "Bà")*@, @Model.HoiThamNhanDan2</span>
                                }
                                @if(Model.HoiDong==2 && Model.HoiThamNhanDan3 != null && !Model.HoiThamNhanDan3.IsEmpty())
                                 {
                                    <span>@*@(Model.HoiThamNhanDan3 == "Nam" ? "Ông" : "Bà")*@, @Model.HoiThamNhanDan3</span>
                                }
                            </p>
                            
                        </td>
                    </tr>
                
                <tr>
                    <td colspan="3" style="padding: 10px 0 10px 10px">
                        <p style="text-align: justify; margin: 0;">
                            Kiểm sát viên (nếu có):
                            @if (Model.KiemSatVien != null && !Model.KiemSatVien.IsEmpty())
                            {
                                <span>@*@(Model.GioiTinhKiemSatVien == "Nam" ? "Ông" : "Bà")*@ @Model.KiemSatVien</span>
                            }
                            else
                            {
                                <span>@*Ông (Bà)*@ .................................... </span>
                            }
                        </p>
                    </td>
                </tr>
                <tr>
                    <td colspan="3" style="padding: 10px 0 10px 10px">
                        <p style="text-align: justify; margin: 0;">
                            Thư ký phiên tòa:
                            @if (Model.ThuKy != null && !Model.ThuKy.IsEmpty())
                            {
                                <span>@*@(Model.GioiTinhThuKy == "Nam" ? "Ông" : "Bà")*@ @Model.ThuKy</span>
                            }
                            else
                            {
                                <span>@*Ông (Bà)*@ .................................... </span>
                            }
                        </p>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
    <tr>
        <td colspan="3">
            <p style="margin: 0 0 10px 0; text-align: justify; text-indent: 28.35pt; line-height: 1.15em;">
                @if (Model.SoBanAn != null)
            {
                <span class="float-left inl">Bản án sơ thẩm số: @Model.SoBanAn/@Model.NgayRaBanAn.Year/HSST</span> <span class="float-right">Ngày @(Model.NgayRaBanAn.Day < 10 ? "0" + Model.NgayRaBanAn.Day.ToString() : Model.NgayRaBanAn.Day.ToString()) tháng @(Model.NgayRaBanAn.Month < 3 ? "0" + Model.NgayRaBanAn.Month.ToString() : Model.NgayRaBanAn.Month.ToString()) năm @Model.NgayRaBanAn.Year.ToString().</span>
            }
            else if(Model.SoQuyetDinh!=null)
            {
                <span class="float-left">Quyết định sơ thẩm số: @Model.SoQuyetDinh/@Model.NgayRaQuyetDinh.Year/HSST</span> <span class="float-right">Ngày @(Model.NgayRaQuyetDinh.Day < 10 ? "0" + Model.NgayRaQuyetDinh.Day.ToString() : Model.NgayRaQuyetDinh.Day.ToString()) tháng @(Model.NgayRaQuyetDinh.Month < 3 ? "0" + Model.NgayRaQuyetDinh.Month.ToString() : Model.NgayRaQuyetDinh.Month.ToString()) năm @(Model.NgayRaQuyetDinh.Year==1 ? DateTime.Now.Year :Model.NgayRaQuyetDinh.Year).</span>
                }
                else
                {
                    <span>Bản án/Quyết định sơ thẩm số: ...../20..../HSST ngày ..... tháng ..... năm ........</span>
                }
            </p>
        </td>
    </tr>
    <tr>
        <td colspan="3">
            <table style="font-size: 14pt;">
                <tr>
                    <td width="7%" height="60px;">
                        <div>
                            <table border="1" cellspacing="0" width="30" height="30">
                                <tr>
                                    <td>&nbsp;</td>
                                </tr>
                            </table>
                        </div>
                    </td>
                    <td width="43%" valign="middle">
                        <p style="margin: 0;">
                            Kháng cáo
                        </p>
                    </td>
                    <td width="7%">
                        <div style="display: table-row;">
                            <table border="1" cellspacing="0" width="30" height="30">
                                <tr>
                                    <td>&nbsp;</td>
                                </tr>
                            </table>
                        </div>
                    </td>
                    <td width="43%" valign="middle">
                        <p style="margin: 0;">
                            Kháng nghị
                        </p>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div style="display: table-row;">
                            <table border="1" cellspacing="0" width="30" height="30">
                                <tr>
                                    <td>&nbsp;</td>
                                </tr>
                            </table>
                        </div>
                    </td>
                    <td colspan="3" valign="middle">
                        <p style="margin: 0;">
                            Không có KC/KN, có hiệu lực ngày ..... tháng ..... năm 20....
                        </p>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>