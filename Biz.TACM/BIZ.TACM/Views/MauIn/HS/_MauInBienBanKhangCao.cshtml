                                    Đại diện Tòa án Nhân dân @Model.TenToaAn lập biên bản về việc kháng cáo:<br />
                                    @(item.GioiTinhNguoiLapBB == "Nam" ? "Ông " : "Bà ")@item.NguoiLapBienBan - chức vụ (chức danh): @(item.ChucVu ?? item.ChucDanh).
                                </p>
                                <p style="text-align: justify; text-indent: 28.35pt; line-height: 1.15em; margin: 0 0 10px 0">
                                    Người kháng cáo:  @if (item.DuongSuLa == "Cá nhân")
                                    {
                                        @(item.GioiTinh == "Nam" ? "Ông " : "Bà ")@item.HoTenDuongSu
                                    }
                                        else if (item.DuongSuLa == "Cơ quan, tổ chức")
                                    {
                                        @item.TenCoQuanToChuc
                                    } 
                                    là @item.TuCachThamGiaToTung.
                                </p>
                                <p style="text-align: center; text-indent: 28.35pt; line-height: 1.3em;">
                                    <strong>Nội dung kháng cáo</strong>
                                </p>
                                
                                
                                    @Html.Raw("<p style=\"margin: 0px 0 10px 0;padding-left:28.5pt; text-align: justify; text-indent: 28.35pt; line-height: 1.15em;\"><ul style=\"padding-left:14pt;margin: 0px 0 5px 0;list-style-type: none;\">")
                                    @Html.Raw(Server.HtmlDecode(item.NoiDungKhangCao))
                                    @Html.Raw("</ul></p>")
                                
                                <p style="text-align: justify; text-indent: 28.35pt; line-height: 1.15em; margin: 0 0 10px 0">
                                    Biên bản lập xong vào @if(item.NgayNop.Hour!=0)
                            {
                                <span>hồi @(item.NgayNop.Hour < 10 ? "0" + item.NgayNop.Hour.ToString() : item.NgayNop.Hour.ToString()) giờ @item.NgayNop.Minute.ToString() phút,</span>
                            } 
                                    ngày @(item.NgayTao.Day < 10 ? "0" + item.NgayTao.Day.ToString() : item.NgayTao.Day.ToString()) tháng @(item.NgayTao.Month < 3 ? "0" + item.NgayTao.Month.ToString() : item.NgayTao.Month.ToString()) năm @item.NgayTao.Year.ToString()
                                    được đọc lại để người kháng cáo nghe và cùng nhất trí ký tên.
                                </p>
                            </td>
                        </tr>
                    </table>
                    </td>
                </tr>
            <tr style="height: 50px;"><td></td></tr>
            <tr valign="top" style="text-align:center">
                <td>
                    <p @*style="font-size:12pt"*@><strong>NGƯỜI KHÁNG CÁO</strong></p>
                    <p style="margin: 100px 0 0 0">@item.HoTenDuongSu</p>
                </td>
                <td></td>
                <td align="right" style="font-size:13pt">
                    <div style="float: right; text-align:center;font-size:13pt;padding-right:50px">
                        <p><strong @*style="font-size:12pt"*@>NGƯỜI LẬP BIÊN BẢN KHÁNG CÁO</strong></p>

                        <p style="margin: 100px 0 0 0">@item.NguoiLapBienBan</p>
                    </div>
                </td>
            </tr>
        </table>
        if (item != Model.NguoiKhangCao.Last())
        {
            <div style="page-break-before:always">&nbsp;</div>
        }
    }
}
