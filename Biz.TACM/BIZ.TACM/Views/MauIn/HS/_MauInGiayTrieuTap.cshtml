                            if (Model.DiaDiemMoPhienToa == null || Model.DiaDiemMoPhienToa.IsEmpty())
                            {
                                <span>(............................................................).</span>
                            }
                            else
                            {
                                <span>(@Model.DiaDiemMoPhienToa).</span>
                            }
