                                                dieuluat = "Điều 435";
                                            }
                                            if (ds.TuCachThamGiaToTung == "Bị cáo" && (DateTime.Now.Year - nam) < 18)
                                            {
                                                dieuluat = "Điều 423";
                                            }
                                        }

                                    } break;

                            };

                        }
