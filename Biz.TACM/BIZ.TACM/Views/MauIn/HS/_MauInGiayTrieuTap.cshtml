    int sobicao = Model.DanhSachDuongSu.Count(x => x.TuCachThamGiaToTung == "Bị cáo" | x.TuCachThamGiaToTung == "Bị can");
    string bicao = null;
    if(sobicao<10)
    {
        bicao = "0" + sobicao;
    }
    else
    {
        bicao = sobicao.ToString();
    }
    Model.TenVuAn = Model.TenVuAn + " (" + bicao + " bị cáo)";
    
