@using Biz.Lib.TACM.Resources.Resources
@model Biz.Lib.TACM.ThongKeGiamSat.Models.LocDuLieuThongKeModel

@{
    ViewBag.Title = @ViewText.TITLE_THONGKE_ANHUYSUA.ToUpper();
}

<div class="float-left">
    <h4 class="text-uppercase mb-2">@ViewText.TITLE_THONGKE_ANHUYSUA</h4>
</div>
<div class="clearfix"></div>

<div id="main-content">
    <div class="container-fluid row">
        <div class="col-9">
            <div class="row">
                <div class="col-12 text-right">
                    <div id="menu-thongke-btn" class="btn-group">
                        <button id="bieu-do-btn" type="button" class="btn btn-outline-primary active">@ViewText.BUTTON_BIEUDO</button>
                        <button id="danh-sach-btn" type="button" class="btn btn-outline-primary">@ViewText.BUTTON_DANHSACH</button>
                    </div>
                </div>
            </div>

            <div id="contentThongKeAnHuySua" style="width: 100%">
                <input id="loaiThongKe" type="hidden" value="1" />
            </div>
        </div>

        <div class="col-3">
            <div class="card">
                <div class="card-block">
                    <form>
                        <div class="col-12">
                            @ViewText.LABEL_TUNGAY<span class="input-required">*</span>
                        </div>
                        <div class="col-12 mb-3">
                            <div class="input-group date datepicker">
                                @Html.TextBoxFor(x => x.TuNgay, "{0:dd/MM/yyyy}", new { @class = "form-control" })
                                <span class="input-group-addon">
                                    <span class="fa fa-calendar"></span>
                                </span>
                            </div>
                            <small class="form-text">@Html.ValidationMessageFor(x => x.TuNgay)</small>
                        </div>
                        <div class="col-12">
                            @ViewText.LABEL_DENNGAY<span class="input-required">*</span>
                        </div>
                        <div class="col-12 mb-3">
                            <div class="input-group date datepicker">
                                @Html.TextBoxFor(x => x.DenNgay, "{0:dd/MM/yyyy}", new { @class = "form-control" })
                                <span class="input-group-addon">
                                    <span class="fa fa-calendar"></span>
                                </span>
                            </div>
                            <small class="form-text">@Html.ValidationMessageFor(x => x.DenNgay)</small>
                        </div>
                        <div class="col-12">
                            @ViewText.LABEL_TOAAN
                        </div>
                        <div class="col-12 mb-3">
                            @Html.DropDownListFor(x => x.ToaAnID, (SelectList)ViewBag.ddlToaAn, Setting.DDL_TATCA, new { @class = "form-control" })
                        </div>
                        <div class="col-12">
                            @ViewText.LABEL_THAMPHAN
                        </div>
                        <div class="col-12 mb-3">
                            @Html.DropDownListFor(x => x.ThamPhan, (SelectList)ViewBag.ddlThamPhan, Setting.DDL_CHOOSE, new { @class = "form-control" })
                        </div>
                        <div class="col-12" style="margin-top: 30px;">
                            <button type="button" class="btn btn-danger text-uppercase pull-left" style="width: 48%;" id="xem-btn"><i class="fa fa-search" aria-hidden="true"></i>&nbsp;@ViewText.BUTTON_XEM</button>
                            <button type="reset" class="btn btn-default text-uppercase pull-right" style="width: 48%;"><i class="fa fa-refresh" aria-hidden="true"></i>&nbsp;@ViewText.BUTTON_LAMLAI</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/bundles/ThongKeAnHuySua")
    <script type="text/javascript">
        $(".datepicker").datetimepicker({
            format: 'DD/MM/YYYY'
        });

        $('#menu-thongke-btn button').click(function () {
            $(this).addClass('active').siblings().removeClass('active');
        });
    </script>
}
